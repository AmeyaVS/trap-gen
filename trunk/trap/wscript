#!/usr/bin/env python

import os, Params

def build(bld):
    bld.add_subdirs('runtime')

    obj = bld.new_task_gen('staticlib')
    obj.uselib_local = 'loader'
    obj.name = 'trap'
    obj.target = 'trap'
    obj.install_path = os.path.join('${PREFIX}', 'lib')

    obj = bld.new_task_gen('py')
    obj.find_sources_in_dirs('.', exts=['.py'])
    if Params.g_options.pyinstalldir:
        obj.install_path = os.path.join(Params.g_options.pyinstalldir, 'trap')
    else:
        obj.install_path = os.path.join(obj.default_install_path, 'trap')